{
  "name": "trek-http-error",
  "version": "0.0.5",
  "description": "A Http Error for Trek.js",
  "repository": "trekjs/http-error",
  "license": "MIT",
  "author": {
    "name": "Fangdun Cai",
    "email": "cfddream@gmail.com",
    "url": "fundon.me"
  },
  "keywords": [
    "http",
    "error"
  ],
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "test": "xo && nyc ava"
  },
  "devDependencies": {
    "ava": "0.18",
    "babel-preset-es2016": "6",
    "babel-register": "6",
    "nyc": "10",
    "xo": "0.17"
  },
  "ava": {
    "concurrency": 5,
    "require": "babel-register"
  },
  "babel": {
    "presets": [
      "es2016"
    ]
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "es6"
    ],
    "semicolon": false,
    "space": true,
    "ignores": [],
    "rules": {
      "curly": 0,
      "import/no-named-as-default": 0,
      "max-lines": 0,
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "todo",
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "object-curly-spacing": [
        "error",
        "always",
        {
          "arraysInObjects": true,
          "objectsInObjects": true
        }
      ],
      "space-before-function-paren": [
        2,
        "always"
      ],
      "yoda": 0
    }
  }
}
