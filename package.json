{
  "name": "trek-http-error",
  "version": "0.0.5",
  "description": "A Http Error for Trek.js",
  "repository": "trekjs/http-error",
  "license": "MIT",
  "author": {
    "name": "Fangdun Cai",
    "email": "cfddream@gmail.com",
    "url": "fundon.me"
  },
  "keywords": [
    "http",
    "error"
  ],
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "test": "xo && nyc --reporter=lcov ava --no-cache -c 5"
  },
  "devDependencies": {
    "ava": "0",
    "babel-plugin-transform-async-to-generator": "6",
    "babel-preset-es2016": "6",
    "babel-register": "6",
    "nyc": "8",
    "xo": "0"
  },
  "babel": {
    "plugins": [
      "transform-async-to-generator"
    ],
    "presets": [
      "es2016"
    ]
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "es6"
    ],
    "semicolon": false,
    "space": true,
    "ignores": [],
    "rules": {
      "curly": 0,
      "import/no-named-as-default": 0,
      "max-lines": 0,
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "todo",
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "object-curly-spacing": [
        "error",
        "always",
        {
          "arraysInObjects": true,
          "objectsInObjects": true
        }
      ],
      "space-before-function-paren": [
        2,
        "always"
      ],
      "yoda": 0
    }
  }
}
